<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YouTube API"
        android:textAlignment="center"
        android:textColor="@color/alm_black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.cardview.widget.CardView
        android:id="@+id/music_card"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thumbnail_search"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:contentDescription="blank"
                android:src="@drawable/searchthumb"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/music_text"
                android:textColor="@color/alm_black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Search"
                android:textAlignment="center"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail_search" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:clickable="true"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/music_card">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:contentDescription="blank"
                android:src="@drawable/thumbnail_trending"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/info_text"
                android:textColor="@color/alm_black"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trending Now"
                android:textAlignment="center"
                android:textSize="28sp"
                app:layout_constraintTop_toBottomOf="@+id/thumbnail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>